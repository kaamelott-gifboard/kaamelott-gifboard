{% extends 'body.html.twig' %}

{% import 'macros/input-copy.html.twig' as copy %}

{% set title = 'Les meilleures répliques de Kaamelott en GIFs' %}

{% block title %}{{ title }}{% endblock %}

{% block canonical %}
    <link rel="canonical" href="{{ url }}"/>{% endblock %}

{% block meta -%}
    {% if quote|length < 50 %}
        {% set description = quote ~ ' Les meilleures répliques de Kaamelott en GIFs' %}
    {% else %}
        {% set description = quote %}
    {% endif %}

    <meta name="description" content="{{ description }}">
    <meta property="og:type" content="website">
    <meta property="og:title" content="{{ title }}">
    <meta property="og:description" content="{{ description }}">
    <meta property="og:url" content="{{ image }}">
    <meta property="og:image" content="{{ image }}">
    <meta property="og:image:type" content="image/gif">
    {% if width is not null and height is not null -%}
        <meta property="og:image:width" content="{{ width }}">
        <meta property="og:image:height" content="{{ height }}">
    {% endif %}
{% endblock %}

{% block gif %}
    <div class="quote-block">
        <h2 class="quote">{{ quote }}</h2>
    </div>

    <br />

    <img src="{{ image }}" alt="{{ quote }}" class="single-gif"/><br/><br/>

    <div class="quote-characters">
        {% for character in characters %}
            <div class="quote-character-block">
                <a href="{{ character.url }}">
                    <img src="{{ character.image }}" class="character-icon-quote icon-dark-shadow"
                         alt="{{ character.name }}" title="{{ character.name }}"/>
                </a>
            </div>
        {% endfor %}
    </div>

    {{ copy.block_mobile(image) }}

    {{ copy.block('Source', url, 'Lien vers cette page') }}
    {{ copy.block('Gif', image, 'Image originale') }}
{% endblock %}
