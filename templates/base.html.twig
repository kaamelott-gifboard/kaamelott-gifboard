<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Kaamelott Gifboard{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
        {% endblock %}
    </head>
    <body class="body">
        <div>
            <div id="banner" class="banner">
                <h1><a href="{{ path('index') }}" class="no-style">Kaamelott Gifboard</a></h1>
            </div>
            <div id="main" class="main">
                {% block body %}{% endblock %}
            </div>
        </div>
        {% block javascripts %}
            <script src="{{ asset('js/script.js') }}"></script>
        {% endblock %}
    </body>
</html>
