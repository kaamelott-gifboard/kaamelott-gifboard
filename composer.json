{
    "name": "kaamelott-gifboard/kaamelott-gifboard",
    "type": "project",
    "description": "Le recueil où l'on peut trouver les meilleures répliques de Kaamelott en GIFs",
    "license": "MIT",
    "authors": [
        {
            "name": "Vincent Tommasi",
            "role": "Developer",
            "email": "tommasi.v@gmail.com"
        },
        {
            "name": "Pablo Godinez",
            "role": "Developer",
            "email": "pablo.godinez@zayon.eu"
        }
    ],
    "require": {
        "php": ">=8.2",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "composer/package-versions-deprecated": "1.11.99.1",
        "nelmio/cors-bundle": "^2.1",
        "phpdocumentor/reflection-docblock": "^5.2",
        "phpstan/phpstan": "^1.0",
        "symfony/asset": "*",
        "symfony/browser-kit": "*",
        "symfony/console": "*",
        "symfony/dotenv": "*",
        "symfony/expression-language": "*",
        "symfony/finder": "*",
        "symfony/flex": "*",
        "symfony/framework-bundle": "*",
        "symfony/http-client": "*",
        "symfony/monolog-bundle": "*",
        "symfony/property-access": "*",
        "symfony/property-info": "*",
        "symfony/security-bundle": "*",
        "symfony/serializer": "*",
        "symfony/string": "*",
        "symfony/twig-bundle": "*",
        "symfony/validator": "*",
        "symfony/yaml": "*",
        "symfonycasts/tailwind-bundle": "^0.10.0",
        "twig/extra-bundle": "^2.12|^3.0",
        "twig/twig": "^3.1"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.49",
        "symfony/phpunit-bridge": "*",
        "symfony/stopwatch": "*",
        "symfony/web-profiler-bundle": "*",
        "vimeo/psalm": "^5.26"
    },
    "config": {
        "platform": {
            "php": "8.2.0"
        },
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true,
        "allow-plugins": {
            "symfony/flex": true
        }
    },
    "autoload": {
        "psr-4": {
            "KaamelottGifboard\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "KaamelottGifboard\\Tests\\": "tests/"
        }
    },
    "replace": {
        "paragonie/random_compat": "2.*",
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd",
            "importmap:install": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "7.2.*"
        }
    }
}
